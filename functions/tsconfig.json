{
    "compilerOptions": {
        "module": "commonjs",
        "resolveJsonModule": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2022",
        "forceConsistentCasingInFileNames": true
    },
    "compileOnSave": true,
    "include": ["src"],
    "exclude": ["node_modules", "lib"]
}
